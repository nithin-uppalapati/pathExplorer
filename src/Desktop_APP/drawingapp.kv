#:kivy 1.11.1

<MyFloatLayout>:
	AnchorLayout:
		anchor_x: "left"
		anchor_y: "center"
		RelativeLayout:
			size_hint: 0.2 , 1
			BoxLayout:
				orientation: 'vertical'
				padding: 0,0,5,0
				Button:
					text: "Start"
					size_hint: 1 , 0.8
					background_color: 0,1,0,1
					on_press:
						root.start()
				Button:
					text: "Aprx Path Gen."
					size_hint: 1 , 0.8
					background_color: 1,0.6,0,1
					on_press:
						root.testing()

				Button:
					text: "Stop"
					size_hint: 1 , 0.8
					background_color: 1,0,0,1
					on_press:
						root.stop()
				Button:
					text: "Clear"
					size_hint: 1 , 0.8
					background_color: 1,1,1,1
					on_press:
						root.clear()

				Button:
					text: "Manual"
					size_hint: 1 , 0.8
					background_color: 1, .3, .4, .85
					on_press:
						root.manualset()
				BoxLayout:
					orientation: 'vertical'
					Label:
						text: "Speed Control"
						size_hint: 1 , 0.1
						background_color: 0,1,1,1
					BoxLayout:
						orientation: 'horizontal'
						Slider:
							min: 0
							max: 100
							value: 50
							step: 1
							size_hint: 1 , 0.9
							on_value: root.slide(*args)
				BoxLayout:
					orientation: 'horizontal'
					Button:
						text: "<"
						size_hint: 1 , 1
						background_color: 0,0,1,1
						on_press:
							root.left()
						on_release:
							root.buttonrelease()
					BoxLayout:
						orientation: 'vertical'
						Button:
							text: "^"
							size_hint: 1 , 0.5
							background_color: 0,0,1,1
							on_press:
								root.top()
							on_release:
								root.buttonrelease()
						Button:
							text: "v"
							size_hint: 1 , 0.5
							background_color: 0,0,1,1
							on_press:
								root.botm()
							on_release:
								root.buttonrelease()
					Button:
						text: ">"
						size_hint: 1 , 1
						shape: "circle"
						background_color: 0,0,1,1
						on_press:
							root.right()
						on_release:
							root.buttonrelease()
				
	AnchorLayout:
		anchor_x: "right"
		anchor_y: "center"
		RelativeLayout:
			size_hint: 0.8 , 1
			Label:
				canvas:
					Rectangle:
						size: self.size
				on_touch_down:
					root.down(args[1])
				on_touch_move:
					root.move(args[1])
				on_touch_up:
					root.up(args[1])
				text: "Draw the Path"
	